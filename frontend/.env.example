# API Configuration
# Backend REST API base URL
VITE_API_URL=http://localhost:8080/api

# WebSocket Configuration
# Backend WebSocket URL for real-time notifications
VITE_WS_URL=http://localhost:8080/ws

# Mock API (for demo when backend is unavailable)
# Set to 'true' to use in-memory mock API instead of backend
# Useful for demoing the app without a running backend
# Default: false
VITE_MOCK_API=false

# Production Example:
# VITE_API_URL=https://api.jonosheba.gov.bd/api
# VITE_WS_URL=wss://api.jonosheba.gov.bd/ws
# VITE_MOCK_API=false
# VITE_WS_URL=https://api.jonosheba.gov.bd/ws
